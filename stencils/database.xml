      
<shapes name="mxgraph.storage"> <!-- Or mxgraph.servers, mxgraph.general -->

<shape name="database" aspect="fixed" w="190" h="190" strokewidth="1">
    <connections/>
    <foreground>
        <!-- 1. Background Rectangle - SCALED Consistent Style -->
        <save/>
        <strokecolor color="#85C1E9"/>
        <fillcolor color="#D6EAF8"/>
        <strokewidth width="5"/>
        <roundrect x="0" y="0" w="190" h="190" arcsize="13"/>
        <fillstroke/>
        <restore/>

        <!-- 2. Database Cylinder Symbol -->
        <save/>
        <strokecolor color="#424949"/> <!-- Dark Grey Outline -->
        <fillcolor color="#ABB2B9"/>   <!-- Medium Grey Fill -->
        <strokewidth width="3"/>

        <!-- Top Ellipse -->
        <ellipse x="50" y="45" w="90" h="20"/>
        <fillstroke/>

        <!-- Middle Ellipse -->
        <!-- Drawn slightly lower -->
        <ellipse x="50" y="85" w="90" h="20"/>
        <fillstroke/>

        <!-- Bottom Ellipse -->
        <!-- Drawn lowest -->
        <ellipse x="50" y="125" w="90" h="20"/>
        <fillstroke/>

        <!-- Vertical Side Lines (Connect the ellipses) -->
        <!-- Drawn slightly inset from the absolute edge of ellipses for visual connection -->
        <!-- Draw these *after* fillstroke on ellipses so they appear on top of the fill -->
        <strokecolor color="#424949"/>
        <strokewidth width="3"/>
        <!-- Left Side -->
        <path>
            <move x="50" y="55"/> <!-- Center Y of top ellipse edge -->
            <line x="50" y="135"/> <!-- Center Y of bottom ellipse edge -->
        </path>
        <stroke/>
        <!-- Right Side -->
        <path>
            <move x="140" y="55"/> <!-- Center Y of top ellipse edge -->
            <line x="140" y="135"/> <!-- Center Y of bottom ellipse edge -->
        </path>
        <stroke/>
        <restore/>

    </foreground>
</shape>

</shapes>

    
