<shapes name="mxgraph.servers">

<shape name="serverLoadBalancer" aspect="fixed" w="190" h="190" strokewidth="1">
    <connections/>
    <foreground>
        <!-- 1. Background Rectangle (Light Blue Style) - SCALED -->
        <save/>
        <strokecolor color="#85C1E9"/>
        <fillcolor color="#D6EAF8"/>
        <!-- SCALED strokewidth -->
        <strokewidth width="5"/>
        <!-- SCALED x, y, w, h, arcsize to fill 190x190 -->
        <roundrect x="0" y="0" w="190" h="190" arcsize="13"/>
        <fillstroke/>
        <restore/>

        <!-- 2. Base Server Box - SCALED -->
        <save/>
        <strokecolor color="#424949"/>
        <fillcolor color="#ABB2B9"/>
        <!-- SCALED strokewidth -->
        <strokewidth width="3"/>
        <!-- SCALED x, y, w, h -->
        <rect x="40" y="32" w="111" h="127"/>
        <fillstroke/>
        <restore/>

        <!-- 3. Load Balancer Arrows Symbol - SCALED -->
        <save/>
        <strokecolor color="#27AE60"/> <!-- Green color -->
        <!-- SCALED strokewidth -->
        <strokewidth width="3"/>

        <!-- Incoming Arrow (Shaft) - SCALED -->
        <path> <move x="16" y="63"/> <line x="71" y="63"/> </path>
        <stroke/>
        <!-- Incoming Arrow (Head) - SCALED -->
        <path> <move x="60" y="55"/> <line x="71" y="63"/> <line x="60" y="71"/> </path>
        <stroke/>

        <!-- Outgoing Arrow 1 (Shaft) - SCALED -->
        <path> <move x="119" y="63"/> <line x="174" y="63"/> </path>
        <stroke/>
        <!-- Outgoing Arrow 1 (Head) - SCALED -->
        <path> <move x="163" y="55"/> <line x="174" y="63"/> <line x="163" y="71"/> </path>
        <stroke/>

        <!-- Outgoing Arrow 2 (Shaft) - SCALED -->
        <path> <move x="119" y="127"/> <line x="174" y="127"/> </path>
        <stroke/>
        <!-- Outgoing Arrow 2 (Head) - SCALED -->
        <path> <move x="163" y="119"/> <line x="174" y="127"/> <line x="163" y="135"/> </path>
        <stroke/>

        <!-- Connecting lines from incoming split point - SCALED -->
        <save/>
        <!-- SCALED strokewidth (min 2 for visibility) -->
        <strokewidth width="2"/>
        <!-- Line from split to top outgoing - SCALED -->
        <path> <move x="71" y="63"/> <line x="119" y="63"/> </path>
        <stroke/>
        <!-- Line from split to bottom outgoing (angled) - SCALED -->
        <path> <move x="71" y="63"/> <line x="95" y="95"/> <line x="119" y="127"/> </path>
        <stroke/>
        <restore/> <!-- Restore main arrow stroke width -->

        <restore/> <!-- Restore state after drawing symbols -->

    </foreground>
</shape>

</shapes>
