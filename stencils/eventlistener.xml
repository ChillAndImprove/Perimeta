<shapes name="mxgraph.integration"> <!-- Or mxgraph.general, mxgraph.events -->

<shape name="eventListener" aspect="fixed" w="190" h="190" strokewidth="1">
    <connections/>
    <foreground>
        <!-- 1. Background Rectangle - SCALED Consistent Style -->
        <save/>
        <strokecolor color="#85C1E9"/>
        <fillcolor color="#D6EAF8"/>
        <strokewidth width="5"/>
        <roundrect x="0" y="0" w="190" h="190" arcsize="13"/>
        <fillstroke/>
        <restore/>

        <!-- 2. Ear Symbol (Listening Aspect) -->
        <save/>
        <strokecolor color="#424949"/> <!-- Dark Grey Border -->
        <fillcolor color="#ABB2B9"/>   <!-- Medium Grey Fill -->
        <strokewidth width="3"/>
        <!-- Positioned slightly right-of-center -->
        <path>
            <!-- Outer curve -->
            <move x="100" y="50"/>
            <curve x1="150" y1="50" x2="150" y2="140" x="100" y="140"/>
            <!-- Inner curve -->
            <quad x1="110" y1="95" x="100" y="50"/>
        </path>
        <fillstroke/>
        <!-- Inner detail line -->
        <strokewidth width="1.5"/>
        <path>
            <move x="105" y="70"/>
            <quad x1="125" y1="80" x="110" y="110"/>
            <quad x1="120" y1="130" x="105" y="120"/>
        </path>
        <stroke/>
        <restore/>

        <!-- 3. Event Symbol (Lightning Bolt) -->
        <save/>
        <strokecolor color="#E67E22"/> <!-- Orange Border -->
        <fillcolor color="#FAD7A0"/>   <!-- Light Orange Fill -->
        <strokewidth width="3"/>
        <!-- Positioned to the left, pointing towards the ear -->
        <path>
            <move x="80" y="60"/>  <!-- Top Point -->
            <line x="50" y="95"/>  <!-- Mid Left -->
            <line x="70" y="95"/>  <!-- Mid Right -->
            <line x="40" y="130"/> <!-- Bottom Point -->
            <line x="70" y="105"/> <!-- Back up Mid Left -->
            <line x="50" y="105"/> <!-- Back up Mid Right -->
            <close/>
        </path>
        <fillstroke/>
        <restore/>

    </foreground>
</shape>

</shapes>
