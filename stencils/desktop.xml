<shapes name="mxgraph.computers">

<shape name="clientDesktop" aspect="fixed" w="190" h="190" strokewidth="1">
    <connections/>
    <foreground>
        <!-- 1. Background Rectangle (Light Blue Style) - SCALED -->
        <save/>
        <strokecolor color="#85C1E9"/>
        <fillcolor color="#D6EAF8"/>
        <!-- SCALED strokewidth -->
        <strokewidth width="5"/>
        <!-- SCALED x, y, w, h, arcsize to fill 190x190 -->
        <roundrect x="0" y="0" w="190" h="190" arcsize="13"/>
        <fillstroke/>
        <restore/>

        <!-- 2. Monitor Screen - SCALED -->
        <save/>
        <strokecolor color="#424949"/>
        <fillcolor color="#ABB2B9"/> <!-- Bezel -->
        <!-- SCALED strokewidth -->
        <strokewidth width="3"/>
        <!-- SCALED x, y, w, h, arcsize -->
        <roundrect x="24" y="24" w="111" h="103" arcsize="5"/> <!-- Monitor Bezel -->
        <fillstroke/>

        <!-- Inner Screen Area (Display) - SCALED -->
        <strokecolor color="#1C2833"/>
        <fillcolor color="#EAECEE"/>
        <!-- SCALED strokewidth -->
        <strokewidth width="2"/>
        <!-- SCALED x, y, w, h -->
        <rect x="32" y="32" w="95" h="87"/>
        <fillstroke/>
        <restore/>

        <!-- 3. Monitor Stand - SCALED -->
        <save/>
        <strokecolor color="#424949"/>
        <fillcolor color="#ABB2B9"/>
        <!-- SCALED strokewidth -->
        <strokewidth width="3"/>
        <!-- Neck connecting to bottom-center of monitor - SCALED -->
        <!-- SCALED x, y, w, h -->
        <rect x="68" y="127" w="22" h="24"/>
        <fillstroke/>
        <!-- Base foot of the stand - SCALED -->
        <!-- SCALED x, y, w, h -->
        <rect x="47.5" y="150" w="63" h="8"/>
        <fillstroke/>
        <restore/>

        <!-- 4. Desktop Tower (System Unit) - SCALED -->
        <save/>
        <strokecolor color="#424949"/>
        <fillcolor color="#ABB2B9"/>
        <!-- SCALED strokewidth -->
        <strokewidth width="3"/>
        <!-- SCALED x, y, w, h, arcsize -->
        <roundrect x="142.5" y="40" w="40" h="119" arcsize="5"/>
        <fillstroke/>

        <!-- Simple detail (e.g., power button or drive slot indicator) - SCALED -->
        <strokecolor color="#424949"/>
        <fillcolor color="#7F8C8D"/>
        <!-- SCALED strokewidth -->
        <strokewidth width="2"/>
        <!-- SCALED x, y, w, h -->
        <ellipse x="158" y="47.5" w="8" h="8"/> <!-- Small circle near top -->
        <fillstroke/>
         <!-- SCALED x, y, w, h -->
         <rect x="150" y="71" w="24" h="5"/> <!-- Thin rectangle for drive slot-->
         <fillstroke/>
        <restore/>

    </foreground>
</shape>

</shapes>
